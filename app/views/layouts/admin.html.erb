<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS: <%= @page_title || "Admin Area" %></title>
    <%= stylesheet_link_tag('admin', :media => 'all') %>
  </head>

  <body>
    <div id="header">
      <h4>Simple CMS Admins</h4>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
      <% end %>

      <div id="content">
        <%= yield %>
      </div>
    </div><!--#main-->

    <div id="footer">
      <p id="copyright">&copy; AwesomeYeng.com</p>
    </div>
    
  </body>
</html>
