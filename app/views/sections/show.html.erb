<%= link_to("<< Back to sections", sections_path(:page_id => @page.id)) %>

<h1>Show Section</h1>
<table>
	<tr>
		<td>Name</td>
		<td><%= @section.name %></td>
	</tr>
	<tr>
		<td>Page id</td>
		<td><%= @section.page_id %></td>
	</tr>
	<tr>
		<td>Visible</td>
		<td><%= @section.visible ? 'Yes' : 'No' %></td>
	</tr>
	<tr>
		<td>Content Type</td>
		<td><%= @section.content_type %></td>
	</tr>
	<tr>
		<td>Content</td>
		<td><%= @section.content %></td>
	</tr>
	<tr>
		<td>Created</td>
		<td><%= @section.created_at %></td>
	</tr>
	<tr>
		<td>Updated</td>
		<td><%= @section.updated_at %></td>
	</tr>
</table>