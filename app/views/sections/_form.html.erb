<%= error_messages_for(f.object) %>

<table summary="Section form fields">
	<tr>
		<td>Name</td>
		<td><%= f.text_field(:name) %></td>
	</tr>
	<tr>
		<th>Subject</th>
		<td><%= f.object.page.subject.name %></td>
	</tr>
	<tr>
		<th>Page</th>
		<td><%= f.object.page.name %></td>
	</tr>
	<tr>
		<td>Position</td>
		<td>
			<%= f.select(:position, 1..@section_count) %>
		</td>
	</tr>
	<tr>
		<td>Visible</td>
		<td><%= f.check_box(:visible) %></td>
	</tr>
	<tr>
		<td>Content Type</td>
		<td>
			<%= f.radio_button(:content_type, 'text') %> Text
			<%= f.radio_button(:content_type, 'HTML') %> HTML
		</td>
	</tr>
	<tr>
		<td>Content</td>
		<td><%= f.text_area(:content, :size => '40x10') %></td>
	</tr>
</table>
	